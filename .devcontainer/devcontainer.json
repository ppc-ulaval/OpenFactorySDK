{
  "name": "OpenFactory-SDK Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".",
    "args": {
      "USERNAME": "vscode",
      "USER_UID": "1000",
      "USER_GID": "1000"
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/openfactoryio/openfactory-sdk/infra:0.4.8": {},
    "ghcr.io/openfactoryio/openfactory-sdk/opcua-connector:0.4.8": {}
  },
  "postCreateCommand": "pip install -e /workspaces/openfactory-sdk",
  "containerEnv": {
    "OPENFACTORY_ENV": "dev",
    "ENVIRONMENT": "local",
    "DEPLOYMENT_PLATFORM": "docker",
    "OPENFACTORY_UNS_SCHEMA": "/workspaces/openfactory-sdk/.devcontainer/uns.yml"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}